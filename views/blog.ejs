<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/nav") %>
     <div class="container mt-4">
     <center><h1><%= blog.title %></h1></center>
    <div class=""container>Written By- 
   <img src="<%= blog.createdby.profilephotourl %>" width="50px"><%= blog.createdby.fullname %>
    </div>
    <br>
    <center><img src = "<%=  blog.coverImageURL %>" width="500px"></center><br>
     <pre><h6><%= blog.body %></h6></pre>
    </div>
    <br><br>
    <div class="container mt-3">
        <h2>Comments (<%= comments.length %>)</h2>
        <% if (locals.user) { %>
            <form action ="/blog/comment/<%= blog._id %>" method="post">
                <input type="text" id="content" class="form-control" name="content" aria-describedby="content" placeholder="Enter your comment">
                <button type="submit" class="btn btn-sm btn-primary">Add</button>
                </form>
        <% } %>
        <br><br>
        <% comments.forEach(comment => { %>
         <div>
            <img src="<%= comment.createdby.profilephotourl %>" width="50px"><%= comment.createdby.fullname %> 
            <pre><%= comment.content %></pre>
         </div>
        <% }) %>
    </div>
    <%- include("./partials/script") %>
  </body>
</html>